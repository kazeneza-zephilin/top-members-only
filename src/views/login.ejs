<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      background-color: #f5f5f5;
      font-family: Arial, sans-serif;
    }
    .form-container {
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0px 4px 20px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 350px;
      text-align: center;
      box-sizing: border-box;
    }
    h1 {
      margin-bottom: 1.5rem;
      font-size: 1.8rem;
      color: #333;
    }
    input {
      width: 100%;
      padding: 12px;
      margin-bottom: 12px;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 1rem;
      box-sizing: border-box;
    }
    button {
      width: 100%;
      padding: 12px;
      background: #a74fff;;
      color: white;
      font-size: 1rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background: rebeccapurple;
    }
    ul {
      padding: 0;
      list-style: none;
      margin-bottom: 1rem;
    }
    li.error {
      color: red;
      margin-bottom: 5px;
      text-align: left;
      font-size: 0.9rem;
    }
    li.success {
      color: green;
      margin-bottom: 5px;
      text-align: center;
      font-size: 0.9rem;
    }
    .message-box {
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h1>Login</h1>

    <div class="message-box">
      <% if (errors) { %>
        <ul>
          <% errors.forEach((error) => { %>
            <li class="error"><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>

      <% if (success) { %>
        <ul>
          <li class="success"><%= success %></li>
        </ul>
      <% } %>
    </div>

    <form action="/login" method="POST">
      <input type="email" name="email" placeholder="Email" />
      <input type="password" name="password" placeholder="Password" />
      <button type="submit">Log In</button>
    </form>
  </div>
</body>
</html>
