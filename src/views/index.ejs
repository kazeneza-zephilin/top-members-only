<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            margin: 0;
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
            padding: 2rem;
        }
        .container { width: 100%; max-width: 800px; }

        .nav-links {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-bottom: 2rem;
        }
        .nav-links a {
            text-decoration: none;
            padding: 10px 18px;
            background: #a74fff;
            color: white;
            border-radius: 5px;
            font-size: 1rem;
            transition: background 0.3s;
        }
        .nav-links a:hover { background: rebeccapurple; }

        .post-message-btn {
            display: inline-block;
            margin-bottom: 2rem;
            padding: 10px 18px;
            background: #a74fff;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1rem;
            transition: background 0.3s;
        }
        .post-message-btn:hover { background: rebeccapurple; }

        .edit-btn {
            display: inline-block;
            margin-top: 0.5rem;
            padding: 6px 12px;
            background: #a74fff;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-size: 0.9rem;
        }
        .edit-btn:hover { background: rebeccapurple; }

        .messages-container {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .message-card {
            background: white;
            border-radius: 10px;
            padding: 1.2rem;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }
        .message-card h3 {
            margin: 0 0 0.5rem;
            font-size: 1.3rem;
            color: #a74fff;
        }
        .message-card p { margin: 0; color: #555; font-size: 1rem; line-height: 1.4; }
        .message-card .author { margin-top: 0.8rem; font-size: 0.9rem; color: #777; }
        .message-card .date { font-size: 0.8rem; color: #aaa; }

        .membership-form {
            margin-bottom: 2rem;
            padding: 1rem;
            background: white;
            border-radius: 8px;
            box-shadow: 0px 3px 10px rgba(0,0,0,0.1);
        }
        .membership-form input {
            padding: 8px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .membership-form button {
            padding: 8px 16px;
            background: #a74fff;
            border: none;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }
        .membership-form button:hover { background: rebeccapurple; }

        .member-indicator { color: red; font-weight: bold; margin-bottom: 1rem; }
        .error { color: red; margin-top: 0.5rem; }
        .success { color: green; margin-top: 0.5rem; }
    </style>
</head>
<body>
<div class="container">
    <!-- Top navigation -->
    <div class="nav-links">
        <% if (!user) { %>
            <a href="/login">Login</a>
            <a href="/signup">Signup</a>
        <% } else { %>
            <span>Welcome, <%= user.username %></span>
            <a href="/logout">Logout</a>
        <% } %>
    </div>

    <!-- Membership section -->
    <% if (user) { %>
        <% if (!user.is_member) { %>
            <form class="membership-form" action="/membership" method="POST">
                <label for="code">Enter membership code: <code style="color: red;">becomeOne</code></label>
                <input type="password" name="hint_code" id="code" placeholder="hint: becomeOne" required />
                <button type="submit">Become Member</button>

                <% if (errors && errors.length > 0) { %>
                    <div class="error"><%= errors[0].msg %></div>
                <% } %>
                <% if (success) { %>
                    <div class="success"><%= success %></div>
                <% } %>
            </form>
        <% } else { %>
            <div class="member-indicator">✔ You’re a member now!</div>
        <% } %>
    <% } %>

    <!-- Post Message button -->
    <% if (user) { %>
        <a class="post-message-btn" href="/messages/new">Post Message</a>
    <% } %>

    <!-- Messages column -->
    <div class="messages-container">
        <% if (messages && messages.length > 0) { %>
            <% messages.forEach(msg => { %>
                <div class="message-card">
                    <h3><%= msg.title %></h3>
                    <p><%= msg.message %></p>
                    <div class="author">
                        From: 
                        <% if (user && user.is_member) { %>
                            <%= msg.first_name %> <%= msg.second_name %>
                        <% } else { %>
                            <%= msg.username %>
                        <% } %>
                    </div>
                    <div class="date">
                        <small><%= new Date(msg.created_at).toLocaleString() %></small>
                    </div>

                    <!-- Edit button for owner -->
                    <% if (user && user.id === Number(msg.user_id)) { %>
                        <a class="edit-btn" href="/messages/<%= msg.id %>/edit">Edit</a>
                    <% } %>
                </div>
            <% }) %>
        <% } else { %>
            <p>No messages available.</p>
        <% } %>
    </div>
</div>
</body>
</html>
